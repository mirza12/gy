@model TermProject.Models.user
@{
    Layout = "~/Views/Shared/_homePageLayout.cshtml";
    ViewBag.Title = "ManageProfile";
}

<div class="container" style="margin-top:100px" id="mn">
<div class="row span9 well" style="margin-left:250px" >
    
    
    <form class="form-horizontal" role="form" method="post" action="/Account/SaveChanges">
        <div class="form-group">
    <label for="fname" class="col-sm-2 control-label">First Name</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(a => Model.fname, new { @class="form-control" })
    </div>
  </div>
    <div class="form-group">
    <label for="lname" class="col-sm-2 control-label">Last Name</label>
    <div class="col-sm-10">
      @Html.TextBoxFor(a => Model.lname, new { @class="form-control" })
    </div>
  </div>
    <div class="form-group">
    <label for="email" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      @Html.TextBoxFor(a => Model.email, new { @class="form-control" })
    </div>
  </div>

 <div class="form-group">
    <label for="contactno" class="col-sm-2 control-label">Contact Number</label>
    <div class="col-sm-10">
      @Html.TextBoxFor(a => Model.contactno, new { @class="form-control" })
    </div>
  </div>

  <div class="form-group">
    <label for="address" class="col-sm-2 control-label">Address</label>
    <div class="col-sm-10">
        @Html.TextAreaFor(a => Model.address , new {@cols="15" , @rows="5", @class="form-control" })
    </div>
  </div>
  <div class="form-group">
    <label for="accountno" class="col-sm-2 control-label">Account Number</label>
    <div class="col-sm-10">
      @Html.TextBoxFor(a => Model.accountno, new { @class="form-control" })
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-info">Save</button>
    </div>
  </div>
        
</form>
</div>
    </div>
